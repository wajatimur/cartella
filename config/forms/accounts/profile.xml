			<type>textbox</type>
		</form>
		<form>
			<title>Email</title>
			<name>email</name>
			<data>email</data>
			<type>textbox</type>
		</form>
		<form>
			<title>Phone</title>
			<name>phone</name>
			<data>phone</data>
			<type>textbox</type>
		</form>

	</div>
	<div id="contentRight" class="rightColumn"></div>


